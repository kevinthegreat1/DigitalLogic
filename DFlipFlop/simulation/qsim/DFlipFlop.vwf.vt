`timescale 1 ps/ 1 ps
module DFlipFlop_vlg_sample_tst(
	CLK,
	D,
	sampler_tx
);
input  CLK;
input  D;
output sampler_tx;

reg sample;
time current_time;
always @(CLK or D)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module DFlipFlop_vlg_check_tst (
	Q,
	Qbar,
	sampler_rx
);
input  Q;
input  Qbar;
input sampler_rx;

reg  Q_expected;
reg  Qbar_expected;

reg  Q_prev;
reg  Qbar_prev;

reg  Q_expected_prev;
reg  Qbar_expected_prev;

reg  last_Q_exp;
reg  last_Qbar_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	Q_prev = Q;
	Qbar_prev = Qbar;
end

// update expected /o prevs

always @(trigger)
begin
	Q_expected_prev = Q_expected;
	Qbar_expected_prev = Qbar_expected;
end



// expected Q
initial
begin
	Q_expected = 1'bX;
end 

// expected Qbar
initial
begin
	Qbar_expected = 1'bX;
end 
// generate trigger
always @(Q_expected or Q or Qbar_expected or Qbar)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected Q = %b | expected Qbar = %b | ",Q_expected_prev,Qbar_expected_prev);
	$display("| real Q = %b | real Qbar = %b | ",Q_prev,Qbar_prev);
`endif
	if (
		( Q_expected_prev !== 1'bx ) && ( Q_prev !== Q_expected_prev )
		&& ((Q_expected_prev !== last_Q_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port Q :: @time = %t",  $realtime);
		$display ("     Expected value = %b", Q_expected_prev);
		$display ("     Real value = %b", Q_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_Q_exp = Q_expected_prev;
	end
	if (
		( Qbar_expected_prev !== 1'bx ) && ( Qbar_prev !== Qbar_expected_prev )
		&& ((Qbar_expected_prev !== last_Qbar_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port Qbar :: @time = %t",  $realtime);
		$display ("     Expected value = %b", Qbar_expected_prev);
		$display ("     Real value = %b", Qbar_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_Qbar_exp = Qbar_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#10000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

